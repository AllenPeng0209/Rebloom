{
  "expo": {
    "name": "Rebloom",
    "slug": "Rebloom",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "Rebloom",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to the microphone to record voice messages for AI chat.",
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication to protect your mental health data.",
        "NSUserNotificationsUsageDescription": "This app sends mood reminders and important mental health notifications.",
        "NSCameraUsageDescription": "This app may use the camera for mood analysis features.",
        "NSHealthShareUsageDescription": "This app can integrate with Health data to better understand your wellness patterns."
      },
      "bundleIdentifier": "com.allenpeng0209.Rebloom"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA"
      ],
      "package": "com.allenpeng0209.Rebloom"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-localization",
      "expo-audio",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#8B5A8C"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Rebloom to use Face ID for secure authentication."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "5ba59cf9-b39e-4955-8e74-0fd272bef7ec"
      }
    }
  }
}
