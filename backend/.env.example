# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rebloom
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI/ML Configuration
BAILIAN_API_KEY=your-bailian-api-key
BAILIAN_ENDPOINT=https://dashscope.aliyuncs.com
BAILIAN_WORKSPACE_ID=your-workspace-id

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# Encryption Configuration
MASTER_ENCRYPTION_KEY=your-256-bit-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm
KEY_DERIVATION_ITERATIONS=100000

# Crisis Management
CRISIS_HOTLINE_API_URL=https://api.crisishotline.com
CRISIS_HOTLINE_API_KEY=your-crisis-api-key
EMERGENCY_SERVICES_API_URL=https://api.emergency.gov
EMERGENCY_CONTACTS_WEBHOOK=https://your-emergency-webhook.com

# Healthcare Integration
EHR_INTEGRATION_ENDPOINT=https://api.healthcare.provider.com
INSURANCE_VERIFICATION_API=https://api.insurance.com
FHIR_SERVER_BASE_URL=https://fhir.server.com

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rebloom-storage

# Compliance
HIPAA_AUDIT_RETENTION_DAYS=2555
GDPR_DATA_RETENTION_DAYS=365
AUDIT_LOG_ENCRYPTION=true

# Development
DEBUG=rebloom:*
MOCK_EXTERNAL_SERVICES=false
ENABLE_SWAGGER_UI=true