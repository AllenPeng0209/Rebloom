  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "socket.io": "^4.7.5",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "rate-limiter-flexible": "^4.0.1",
