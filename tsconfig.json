{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/constants/*": ["./lib/constants/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./lib/utils/*"],
      "@/services/*": ["./src/services/*"],
      "@/types": ["./src/types"],
      "@/contexts/*": ["./src/contexts/*"],
      "@/translations/*": ["./lib/translations/*"],
      "@/ui/*": ["./src/components/ui/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
